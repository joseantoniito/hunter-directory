                    <a class="qodef-icon-shortcode normal qodef-icon-huge" href="/eventos/#/agregar-evento">
                        <i class="qodef-icon-font-awesome fa fa-plus qodef-icon-element" style=""></i>
                    </a>
                </div>
            </div>

            <div kendo-grid k-data-source="eventos" k-options="gridOptions">
            </div>
        </div> 
    </div>
</div>
</script>
      
      
<script type="text/ng-template" id="/portafolio-evento.html">
<div style="background-color: #EDEEF2;">
<div class="row">
<div class="container">
    <div class="col-md-9 col-md-offset-1 bgrdWhite divPadTop20">
        
        <a class="coverWrap">
            <img class="img-responsive img-portfolio img-hover photo" src="/uploads/{{evento.banner}}" />
        </a>
        
        <h1>{{evento.nombre}}</h1>
        <h3>{{evento.direccion}}</h3>
        <p>{{evento.direccion}}</p>
        <p>{{evento.fechaInicio  | date:'MM/dd/yyyy h:mma'}}</p>
        <p>{{evento.fechaFin  | date:'MM/dd/yyyy h:mma'}}</p>

        
         <div class="demo-section k-content wide divPadTop20">
            <div kendo-list-view id="listView" k-data-source="sourceFotosEvento">
                <div class="product divFlotante div25perc" k-template>
                    
                    <a name="{{ dataItem._id }}" class="coverWrap a-foto-portfolio" >
                        <img ng-src="/uploads/{{dataItem.url}}" alt=" {{dataItem.descripcion}} image" 
                            class="photo img-foto-portfolio"/>
                    </a>
                </div>
            </div>
            <div kendo-pager k-data-source="sourceFotosEvento"></div>
        </div>
        
    </div> 
</div>
</div>
</div>
</script>
      
      
<script type="text/ng-template" id="/portafolio.html">
<div class="container">
<div class="row">
    <div class="col-md-8 col-md-offset-2 bgrdWhite">

        <div class="demo-section k-content wide">
            <div kendo-list-view id="listView" k-data-source="sourceEventosCompletos">
                <div class="product divPadTop20 row" k-template>
                    <div class="col-md-4">
                        <a href="\\#/portafolio-evento/{{ dataItem._id }}" style="display:block;" class="coverWrap altura100">
                            <img ng-src="/uploads/{{dataItem.banner}}" alt=" {{dataItem.nombre}} image" class="photo" />
                        </a>
                    </div>
                    <div class="col-md-6" style="padding-right:0;">
                        <h4 class="lblPrincipal">{{dataItem.nombre}}</h4>
                        <!--<p>{{dataItem.fechaInicio}} - {{dataItem.fechaFin}}</p>--> 
                        <p>{{dataItem.fechaInicio  | date:'MM/dd/yyyy h:mma'}} - {{dataItem.fechaFin  | date:'MM/dd/yyyy h:mma'}}</p>
                        <!--<p>{{dataItem.fechaInicio  | date:'MM/dd/yyyy h:mma Z':'UTC'}} - {{dataItem.fechaFin  | date:'MM/dd/yyyy h:mma Z':'UTC'}}</p>--> 
                        <p>{{dataItem.direccion}}</p>
                    </div>
                </div>
            </div>
            <div kendo-pager k-data-source="sourceEventosCompletos"></div>
        </div>
    
    </div> 
</div>
</div>
</script>
      
	
