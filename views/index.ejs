<script type="text/ng-template" id="/directorio.html">
        <div style="height: 305px;">
            <uib-carousel active="active" interval="myInterval" no-wrap="noWrapSlides">
              <uib-slide ng-repeat="slide in slides track by slide.id" index="slide.id">
                <img ng-src="{{slide.image}}" style="margin:auto;">
                <div class="carousel-caption">
                  <h4>Slide {{slide.id}}</h4>
                  <p>{{slide.text}}</p>
                </div>
              </uib-slide>
            </uib-carousel>
        </div>
 
        <div class="container">
            <div class="row"> 
                <div class="col-md-8 col-md-offset-2 bgrdWhite">   
                    <!--<div class="page-header" >
                        <h1 class="lblAzulObscuro">Directorio</h1>
                    </div>-->
                    
                    <input kendo-auto-complete 
                        k-options="autoCompleteOptions"
                        style="width: 100%;" />
                    <p class="demo-hint">Your selection: {{ country }}</p>
                
                    <div class="m30"
                        ng-repeat="categoria in categorias">
                        <a href="/#/directorio/{{ categoria.id }}">{{ categoria.nombre }}</a>
                    </div>
                </div>
                
            </div>
        </div>
</script>
      
<script type="text/ng-template" id="/directorio-resultados.html">
 <div class="container">
            <div class="row">
                
                <div class="col-md-8 col-md-offset-2 bgrdWhite">
                    <div class="page-header" >
                        <h1 class="lblAzulObscuro">Resultados</h1>
                    </div>
                
                    <div class="" style="border-bottom:1px solid;"
                        ng-repeat="distribuidor in distribuidores">
                       
                        
                        <div class='divContenedorListado'> 
