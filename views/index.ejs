                                <img class='imagenListado' src='/Imagenes/#:Logo#'/> 
                            </div> 
                            <div class='divContenidoListado'> 
                                <h2>{{ distribuidor.nombre }}</h2>
                                <h3>{{ distribuidor.direccion }}</h3>
                                <a>{{ distribuidor.paginaWeb }}</a>
                                <p>{{ distribuidor.descripcion }}</p>
                            
                                <a class="k-primary k-button" 
                                    href="/#/detalle/{{ distribuidor._id }}">
                                    Ver Detalle</a>    
                            </div> 
                        </div>
                        
                    </div>
                    
                    <!--<div kendo-grid k-data-source="distribuidoresK" k-selectable="'row'"
                        k-pageable='{ "pageSize": 2, "refresh": true, "pageSizes": true }'
                          k-columns='[
                            { "field": "nombre", "title": "nombre"},
                            { "field": "direccion", "title": "direccion"},
                            { "field": "paginaWeb", "title": "paginaWeb" },
                             { "field": "descripcion", "title": "descripcion" }
                          ]'>
                        </div>-->
                    
                </div>
                
                <!--<input kendo-numerictextbox />-->
                
            </div>
        </div>
</script>
      
<script type="text/ng-template" id="/agregar-distribuidores.html">
 <div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 bgrdWhite">
            <div class="page-header" >
                <h1 class="lblAzulObscuro">Agregar Distribuidor</h1>
            </div>

            <form ng-submit="agregarDistribuidor()" class="m30">
                <div class="form-group">
                    <input type="text" 
                        placeholder="nombre" 
                        ng-model="distribuidor.nombre"
                        class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="text" 
                        placeholder="descripcion" 
                        ng-model="distribuidor.descripcion"
                        class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="text" 
                        placeholder="direccion" 
                        ng-model="distribuidor.direccion"
                        class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="text" 
                        placeholder="paginaWeb" 
                        ng-model="distribuidor.paginaWeb"
                        class="form-control"></input>
                </div>
                
                <div class="form-group">
                    <!--<select ng-model="distribuidor.idCategoria">
                        <option ng-repeat="categoria in categorias" 
                            value="{{categoria.id}}">{{categoria.nombre}}</option>
                    </select>-->
                    
                    <select kendo-drop-down-list
                        ng-model="distribuidor.idCategoria"
                        k-data-text-field="'nombre'"
                        k-data-value-field="'id'"
                        k-data-source="categorias"
                        style="width: 100%"></select>
                </div>
                
                <div class="form-group">
                    <input name="files"
                       type="file"
                       kendo-upload
                       k-async="{ saveUrl: 'saveFiles', removeUrl: 'removeFiles', autoUpload: true }"
                       k-success="successUploadFiles"
                       />
                </div>
                
                <button class="btn btn-primary">Guardar</button>
            </form>
        </div>

    </div>
        </div>
</script>
      

<script type="text/ng-template" id="/detalle.html">
 <div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 bgrdWhite">
            <div class="page-header" >
